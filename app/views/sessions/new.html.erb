<div class="row" style="margin-bottom: 40px;">
	<div class="small-4 small-offset-4 columns">
		<h3>Log In</h3>

		<%= form_tag sessions_path do %>

			<div class="control-group">
				<%= label_tag :email %>
				<div class="controls">
					<%= text_field_tag :email, params[:email], class: "form-field" %>
				</div>
			</div>

			<div class="control-group">
				<div class="row">
					<div class="small-6 columns">
						<%= label_tag :password %>
					</div>
					<div class="small-6 columns dark-navy-blue-text forgot-password-joke" style="text-align: right; font-size: 10px;"></div>
				</div>
				<div class="controls">
					<%= password_field_tag :password, nil, class: "form-field" %>
				</div>
			</div>

			<div class="actions text-center">
				<%= button_tag(type: "submit", class: "gold-button full-width margin-20-top") do %>
						Log In
				<% end %>
				<!-- new account -->
				<div class="row" style="margin-top: 20px; margin-bottom: 5px;">
					<span class="small-4 columns"><hr class="grey-line"/></span>
					<div class="small-4 columns" style="text-align: center; font-size: 12px; color: #a7a7a7;">
						New to A&M?
					</div>
					<span class="small-4 columns"><hr class="grey-line"/></span>
				</div>
	
				<%= link_to(signup_path) do %>
					<div class="grey-button full-width">
						Create an A&M account
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>

