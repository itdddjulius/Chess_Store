<div class="row">
	<div class="small-6 small-offset-3 columns">
		<h3>Sign up</h3>

		<p>Already have an account? <%= link_to "Log in", login_path %>.</p>

		<%= render 'form' %>
	</div>
	<div class="small-3 columns">
		<% if @user.errors.any? %>
			<div id="error_explanation" class="orange-border">
				<div style="color: #e77600; margin-bottom: 10px; font-style: bold !important;">
					<%= pluralize(@user.errors.count, "fix") %> needs to be made:
				</div>

				<ul style="font-size: 12px;">
					<% @user.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div>
</div>
