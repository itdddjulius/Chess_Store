<header class="unselectable">
	<div class="header-top-half dark-navy-blue">
		<div class="row">
			<div class="small-3 columns">
				<%= link_to(home_path) do %>
					<%= image_tag("a&m-logo.png", class: 'am-logo unselectable darken-on-hover') %>
				<% end %>
			</div>
			<div class="small-6 columns">
				<div class="items-search">
					
				</div>
			</div>
			<div class="small-3 columns">
				<div id="log" class="row" style="text-align: right;">
					<% if logged_in? %>
						<%= link_to 'Logout', logout_path %>
					<% else %>
						<%= link_to 'Login', login_path %>
					<% end %>
				</div>
				<div class="row">
					<% if logged_in? %>
						Hello, <%= current_user.proper_name %><br/>
						<div style="">
							Dashboard
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<div class="header-bottom-half navy-blue-black">
		<div class="row" >
			<div class="small-6 columns">
				<%= link_to 'Boards', browse_path(category: "boards"), class: "nav-item-link"  %>
				<%= link_to 'Pieces', browse_path(category: "pieces"), class: "nav-item-link" %>
				<%= link_to 'Clocks', browse_path(category: "clocks"), class: "nav-item-link" %>
				<%= link_to 'Supplies', browse_path(category: "supplies"), class: "nav-item-link" %>
			</div>
			<div class="small-6 columns">

			</div>
		</div>
	</div>
</header>

