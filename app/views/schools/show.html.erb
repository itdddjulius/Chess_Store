

<div class="small-6 small-offset-3 columns">
	<h3><%= @school.name %></h3>

	<div id="user-info">
		<div class="grey-border">
			<div class="row" style="margin-top: 10px;">
				<div class="small-12 columns">
					<h5>Address</h5>
					<%= @school.street_1 %>
					<%= @school.street_2 %><br/>
					<%= @school.city %>, <%= @school.state %> <%= @school.zip %>
				</div>
			</div>
			<div class="row">
				<div class="small-4 columns">
					<h5>Grades</h5>
					<%= ["", nil].include?(@school.min_grade) ? 'N/A' : @school.min_grade %> - <%= ["", nil].include?(@school.max_grade) ? 'N/A' : @school.max_grade %>
				</div>
			</div>
			
			<% if can_edit %>
				<hr class="grey-line margin-20-top"/>
				<div class="row">
					<div class="small-8 columns">
						<h5>Active</h5>
						<%= @school.active ? 'Yes' : 'No' %>
					</div>
				</div>
			<% end %>			
		</div>
		<% if can_edit %>
			<div class="row">
				<div class="small-6 small-offset-3 columns">
					<%= link_to edit_school_path(@school.id) do %>
						<button id="update-link" class="gold-button full-width">
							Update School
						</button>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>