<%   states_list = [['Alabama', 'AL'],['Alaska', 'AK'],['Arizona', 'AZ'],['Arkansas', 'AR'],['California', 'CA'],['Colorado', 'CO'],['Connectict', 'CT'],['Delaware', 'DE'],['District of Columbia ', 'DC'],['Florida', 'FL'],['Georgia', 'GA'],['Hawaii', 'HI'],['Idaho', 'ID'],['Illinois', 'IL'],['Indiana', 'IN'],['Iowa', 'IA'],['Kansas', 'KS'],['Kentucky', 'KY'],['Louisiana', 'LA'],['Maine', 'ME'],['Maryland', 'MD'],['Massachusetts', 'MA'],['Michigan', 'MI'],['Minnesota', 'MN'],['Mississippi', 'MS'],['Missouri', 'MO'],['Montana', 'MT'],['Nebraska', 'NE'],['Nevada', 'NV'],['New Hampshire', 'NH'],['New Jersey', 'NJ'],['New Mexico', 'NM'],['New York', 'NY'],['North Carolina','NC'],['North Dakota', 'ND'],['Ohio', 'OH'],['Oklahoma', 'OK'],['Oregon', 'OR'],['Pennsylvania', 'PA'],['Rhode Island', 'RI'],['South Carolina', 'SC'],['South Dakota', 'SD'],['Tennessee', 'TN'],['Texas', 'TX'],['Utah', 'UT'],['Vermont', 'VT'],['Virginia', 'VA'],['Washington', 'WA'],['West Virginia', 'WV'],['Wisconsin ', 'WI'],['Wyoming', 'WY']].freeze
%>
<% states = states_list.map{|key, value| value} %>

<div class="grey-border">
	<%= form_for @school do |f| %>
		<span class="grey-text" style="font-size: 14px;">* - required</span>
		<div class="row" style="margin-top: 10px;">
			<div class="small-10 columns">
				<%= f.label :name, "Name*" %>
				<%= f.text_field :name, class: "form-field" %>
				<!-- <small class="error">First name can't be blank</small> -->
			</div>
		</div>
		<div class="row">
			<div class="small-8 columns">
				<%= f.label :street_1, "Address 1*" %>
				<%= f.text_field :street_1, class: "form-field" %>
				<!-- <small class="error">Last name can't be blank</small> -->
			</div>
		</div>
		<div class="row">
			<div class="small-8 columns">
				<%= f.label :street_2, "Address 2" %>
				<%= f.text_field :street_2, class: "form-field" %>
				<!-- <small class="error">Email can't be blank</small> -->
			</div>
		</div>
		<div class="row">
			<div class="small-6 columns">
				<%= f.label :city, "City*" %>
				<%= f.text_field :city, class: "form-field" %>
			</div>
			<div class="small-3 columns">
				<%= f.label :state, "State" %>
				<%= f.select :state, states, class: "form-field" %>
				<!-- <small class="error">Email can't be blank</small> -->
			</div>
			<span class="small-3 columns"></span>
		</div>
		<div class="row">
			<div class="small-6 columns">
				<%= f.label :zip, "Zip*" %>
				<%= f.text_field :zip, class: "form-field" %>
				<!-- <small class="error">Email can't be blank</small> -->
			</div>
		</div>
		<hr class="grey-line margin-20-top"/>
		<div class="row">
			<div class="small-3 columns">
				<%= f.label :min_grade, "Min. Grade" %>
				<%= f.text_field :min_grade, class: "form-field" %>
				<!-- <small class="error">Email can't be blank</small> -->
			</div>
			<div class="small-3 columns">
				<%= f.label :max_grade, "Max. Grade" %>
				<%= f.text_field :max_grade, class: "form-field" %>
				<!-- <small class="error">Email can't be blank</small> -->
			</div>
			<span class="small-3 columns"></span>
		</div>
		<% if can_edit %>
			<hr class="grey-line margin-20-top"/>
			<div class="row">
				<div class="small-8 columns">
					<%= f.label :active, "Active" %>
					<%= f.check_box :active, class: "form-field" %>
					<!-- <small class="error">Username can't be blank</small> -->
				</div>
			</div>
		<% end %>
</div>
		<div class="row" style="margin-top: 30px;">
			<div class="small-6 small-offset-3 columns">
				<%= button_tag(type: "submit", class: "gold-button full-width") do %>
					Create School
				<% end %>
			</div>
		</div>		
	<% end %>
